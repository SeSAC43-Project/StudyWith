<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Swith:로그인</title>
    
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    
        <%-include('loginCSS')%>

        <script>
            function loginUser() {
                var form = document.getElementById('login_form'); 
                axios ({
                    method:'post',
                    url: "http://localhost:8000/user/login",
                    data: {
                        id: form.id.value,
                        pw: form.password.value, 
                    }
                })
                .then((req) => { return req.data; })
                .then((data) => {
                    alert(data);
                });
            }

            function SignUp() {
                document.location.href="http://localhost:8000/user/sign";
            }

            function findPw() {
                document.location.href="http://localhost:8080/user/findUser";
            }

        </script>
    
    </head>
    <body>
        <thead>
        <nav>
    
        </nav>
        </thead>
        <tbody>
            <div class="container text-center">
                <div class="row">
                <div class="col-2"></div>
                <div class="col-8 login_main">
                    <img src="/login/login_image.png" class="login_background">
                    <div class="form_background">
                        <h1>LOGIN</h1>
                        <!-- 아이디로!!!!! -->
                        <form id="login_form">
                            <input type="text" id="user" name='id' placeholder="아이디"><br>
                            <input type="password" id="pw" name='password' placeholder="비밀번호">
                            <br>

                            <div></div>아이디를 기억해줘!

                            <br>

                            <button type="button" onclick="loginUser()">로그인하기</button>
                            
                            <br>

                            <div>
                                <span>아직도 스윗이 아니신가요?</span>
                                <a href="http://localhost:8000/user/signup" target="_self" onclick="SignUp();">회원가입</a>
                                <span>하러가기</span>
                            </div>

                            <div>
                            <a href="http://localhost:8000/user/findeUser" target="_self" onclick="findPw();">비밀번호 찾기</a>
                            </div>
                            
                        </form>
                    </div>
                    
                </div>
                <div class="col-2"></div>
                </div>
            </div>

        </tbody>
    
    
    </body>
</html>