            var start_list = start_period.split("-");

            var start_year = parseInt(start_list[0]);
            var start_month = parseInt(start_list[1]);
            var start_day = parseInt(start_list[2]);

            $("#start_year").val(start_year).prop("selected", true);
            $("#start_month").val(start_month).prop("selected", true);
            $("#start_day").val(start_day).prop("selected", true);

            /* Ïä§ÌÑ∞Îîî ÎßàÍ∞êÏùº */
