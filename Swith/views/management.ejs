        /* Ìï¥ÏãúÌÉúÍ∑∏ ÏóîÌÑ∞Ïãú Ï∂îÍ∞ÄÎêòÎäî Î∂ÄÎ∂Ñ */
        function show_hashtag(event) {
            const keyword = document.getElementById('enter_hashtag');
            // console.log(keyword);
            const txt = document.getElementById('text_hashtag').value;

            // let btn = "<button type='button' class='deleteHashtag' onclick='deleteTag();'>X</button>";
            // $('#enter_hashtag').append(btn);   //Ïù¥Î∂ÄÎ∂ÑÏùÄ Ìï¥ÏãúÌÉúÍ∑∏ ÏÇ≠Ï†úÌï† Îïå Ï†ÅÏö©(ÎØ∏ÏôÑ)

            // console.log(txt);
            if (event.keyCode == 13) {
                keyword.innerHTML += "<span class='newHashtag'>" + '#' + txt + "</span>";
                document.getElementById('text_hashtag').value = "";
                
            }
        }    

        /* Í∑∏Î£πÏù¥ÎØ∏ÏßÄ ÏóÖÎ°úÎìú Î∂ÄÎ∂Ñ */
        var uploadedFile = '';
        function uploadFile(obj) {
            var formData = new FormData();
            // Ïù¥ÎØ∏ÏßÄÎ•º ÎèôÏ†ÅÌèº Ï†ÑÏÜ° Í∞ÄÎä•ÌïòÍ≤å Ìï¥Ï£ºÎäî FormData Í∞ùÏ≤¥ ÏÉùÏÑ±
            // FormData Í∞ùÏ≤¥Îäî window.FormDataÏóê ÏúÑÏπò
            formData.append('name', uploadedFile);
            formData.append('studyImage', obj.files[0]);
            console.log(uploadedFile);
            console.log(obj.files[0]);
            // append() Î©îÏÜåÎìúÎ°ú key-value Í∞íÏùÑ ÌïòÎÇòÏî© Ï∂îÍ∞Ä
            // Í∞ôÏùÄ keyÎ•º Í∞ÄÏßÑ Í∞íÏùÑ Ïó¨Îü¨Í∞ú ÎÑ£ÏùÑ Ïàò ÏûàÏùå ! (Í∞íÏùÄ Î¨∏ÏûêÏó¥Î°ú ÏûêÎèôÎ≥ÄÌôò)

            axios({
                method: 'post', 
                url: 'http://localhost:8000/feed/write/upload',
                data: formData
            })
            .then((req) => {
                console.log(req.data);
                // $('#groupImgLabel').css('display','none');
                return req.data
            })
            .then((data) => {
                uploadedFile = data.fileName;
