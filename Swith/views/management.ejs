    <script>
        $(document).ready(function(){ 
            /* Ïä§ÌÑ∞Îîî Ïπ¥ÌÖåÍ≥†Î¶¨ */
            var category_btn = document.querySelectorAll('.radio-btn');
            var study_category = document.getElementById('study_category');

            for(let i = 0; i < category_btn.length; i++){
