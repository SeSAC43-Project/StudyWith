                $("#group_img").css({"background-image":`url(/public/group/${data.fileName})`}); 
                $("#group_img").css({"background-size":`700px 70px`});
                
            })
        }

        // Î™©Î°ù Î≤ÑÌäºÏùÑ ÎàÑÎ•¥Î©¥
