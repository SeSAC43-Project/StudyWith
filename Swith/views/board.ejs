                    <a href="http://localhost:8000/feed/board/write?study_id=<%=boardData[0].study_id%>">게시판등록</a>
                </i></span>
            </div>
        </div>

        <div class="modify-list">
                <form id="modify_info">
                        <table border="1" class="lounge_main" style="text-align: center;">
                            <thead>
                            <tr class="lounge_main_total">
                                <th class="lounge_main_name">작성자</th>
                                <th class="lounge_main_title">제목</th>
                                <th class="lounge_main_date">등록일</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% if (isBoard == true ) {%>     
                                <% for (i=0; i <boardData.length; i++) {%>
                                    <!-- <div id="study_id" style="display:none"><%=boardData[0].study_id %></div> -->
                                    <tr class="lounge_total">
                                        <td class="lounge_name"><%=boardData[i].write_name%></td>
                                        <td class="lounge_title" id="<%=boardData[i].lounge_id%>" onclick="detailBoard(this.id);"><%=boardData[i].title%></td>
                                        <td class="lounge_date"><%=boardData[i].lounge_regdate%></td>
                                    </tr>
                                <% } %> 
                            <% } else { %> 
                            <% } %>
                        </tbody>
                        </table>
                </form>
            
        </div>
    </div>

