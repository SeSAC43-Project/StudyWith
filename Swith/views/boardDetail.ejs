    // 목록 클릭 시 라운지로 돌아가기
    function backToLounge() {
            // document.location.href=`http://49.50.164.134:8000/feed/board?study_id=${study_id}`;
            document.location.href='http://49.50.164.134:8000/feed/board?study_id=<%=detailData[0].study_id%>';
        }

    //홈버튼
        function goHome() {
            document.location.href="http://49.50.164.134:8000/feed/board?study_id=<%=detailData[0].study_id%>";
            }

        function goPost() {
            document.location.href="http://49.50.164.134:8000/feed/board?study_id=<%=detailData[0].study_id%>";
            }
    </script>

</body>
</html>
