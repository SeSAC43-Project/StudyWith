            var UserId = $(target).siblings('.hidden_replyId').val();
            console.log(UserNow);
            console.log(id);
            console.log(UserId);

            if (UserNow == UserId) {
                axios({
                    method:'post',
                    url:'http://49.50.164.134:8000/feed/board/detail/remove',
