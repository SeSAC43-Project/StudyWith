                        reply_id : id,
                    }
                })
                .then((req) => {return req.data;})
                .then((data) => {
                        // console.log(UserId);
                        // console.log(UserNow);
                    if (data == true) {
                            $(target).parent('div').remove();
                            console.log('삭제성공!');

                        } 
                    else {
                            console.log('아이디 확인');
                        }
                    })
                }
            }


