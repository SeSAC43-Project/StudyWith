  <script>
    var slideImg =document.getElementById("slideImg");

    var images = new Array(
        "/Swith/public/main/studyGroup1.webp",
        "/Swith/public/main/studyGroup2.webp",
        "/Swith/public/main/studyGroup3.jpeg",
        "/Swith/public/main/studyGroup4.jpeg"
