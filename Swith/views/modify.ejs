<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Swith:비밀번호 변경</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script> -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <script>
        $(window).on('load', function() {
            document.getElementById('id').value = '<%=id%>'
        });

        function pw_check() {
            let pw = $('#pw').val(); 
            let pw2 = $('#pwd').val();
            
            if (pw != pw2) {
                $('#checkPw').html("<p>비밀번호가 일치하지 않습니다</p>");
            };
            if (pw == pw2) {
                $('#checkPw').html("<p>비밀번호가 일치🥰</p>");
            };
        }
        
        function password_modify() {
            var form = document.getElementById('modify_password');
            axios ({
                method:'post',
                url: "http://localhost:8000/user/update",
                data: {
                    user_id : form.id.value,
                    user_password : form.password.value,
                }
            })
            .then((req) => { return req.data;})
            .then((data) => {
                alert(data);
                gologin();
            });
        }

        function gologin() {
            location.replace('http://localhost:8000/user/login');
        }
    </script>
    <style>
        .Popup {
            width: 300px;
            height: 50px;
        }
    </style>
</head>
<body>
    <tbody>
        <div class="container text-center">
            <div class="row">
            <div class="col-2"></div>
            
                <div class="form_background"></div>
                <form id="modify_password">
                    <h1><%=id%>님 비밀번호 변경</h1>

                <div><input id="id" type="text" name="id" placeholder="아이디"></div>
                <div><input id="pw" type="password" name="password" placeholder="비밀번호"required></div>
                <div><input id="pwd" type="password" name="password2" placeholder="비밀번호 확인"required>
                <button type="button" onclick="pw_check()">일치 확인</button>
                </div>
                <div id="checkPw" class="checkPw"></div>
                <button tpye="button" 
                onclick="password_modify()">비밀번호 변경하기</button>
                </form>
    </tbody>
</body>
</html>